# TaskFlow AI - Environment Configuration Template
# Copy this file to .env and update with your actual values

# Application Settings
PROJECT_NAME="TaskFlow AI"
VERSION="1.0.0"
ENVIRONMENT="development"  # development, staging, production
DEBUG=true

# Security Settings (REQUIRED)
SECRET_KEY="your-super-secret-key-at-least-32-characters-long-change-this-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings
ALLOWED_HOSTS=["http://localhost:3000","http://127.0.0.1:3000","http://localhost:8000"]

# Database Settings (REQUIRED)
DATABASE_URL="postgresql://taskflow_user:taskflow_password@localhost:5432/taskflow_ai"
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Settings (for caching and background jobs)
REDIS_URL="redis://localhost:6379/0"

# AI/ML Settings
OPENAI_API_KEY=""  # Get from https://platform.openai.com/api-keys
OPENAI_MODEL="gpt-4"
OPENAI_MAX_TOKENS=1000

# Email Settings (Optional - for notifications)
SMTP_HOST=""
SMTP_PORT=587
SMTP_USERNAME=""
SMTP_PASSWORD=""
SMTP_FROM_EMAIL=""

# File Storage Settings
UPLOAD_DIR="uploads"
MAX_FILE_SIZE=10000000  # 10MB in bytes
ALLOWED_FILE_TYPES=["image/jpeg","image/png","image/gif","application/pdf","text/plain"]

# API Settings
RATE_LIMIT_PER_MINUTE=100

# Logging Settings
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR
LOG_FORMAT="json"  # json or text

# Monitoring Settings (Optional)
SENTRY_DSN=""  # Get from https://sentry.io/

# Development Settings
# Set to false in production
DEBUG=true
